# =============================================================================
# WebClarity SaaS - Environment Variables Template
# =============================================================================
# Copy this file to .env.local and fill in your actual values
# Never commit .env.local to version control!
# =============================================================================

# =============================================================================
# DATABASE CONFIGURATION (Required)
# =============================================================================
# Primary database connection string (for application queries)
# Format: postgresql://user:password@host:port/database
DATABASE_URL="postgresql://postgres:your-password@db.xxx.supabase.co:5432/postgres"

# Direct database connection (for migrations) - Supabase specific
# Use connection pooling URL (port 5432) for migrations
# Same as DATABASE_URL for Supabase
DIRECT_URL="postgresql://postgres:your-password@db.xxx.supabase.co:5432/postgres"

# =============================================================================
# APPLICATION CONFIGURATION (Required)
# =============================================================================
# Base URL of your application
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# Better Auth Secret (generate with: openssl rand -base64 32)
BETTER_AUTH_SECRET="your-secret-key-here-generate-with-openssl"

# Better Auth URL (same as NEXT_PUBLIC_APP_URL in most cases)
BETTER_AUTH_URL="http://localhost:3000"

# =============================================================================
# STORAGE CONFIGURATION (Recommended)
# =============================================================================
# Storage Provider: "s3" or "supabase"
STORAGE_PROVIDER="supabase"

# Supabase Storage Configuration (if using Supabase)
NEXT_PUBLIC_SUPABASE_URL="https://xxx.supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="your-supabase-anon-key"
SUPABASE_SERVICE_ROLE_KEY="your-supabase-service-role-key"

# S3 Storage Configuration (if using S3-compatible storage)
# AWS_ACCESS_KEY_ID="your-access-key"
# AWS_SECRET_ACCESS_KEY="your-secret-key"
# AWS_REGION="us-east-1"
# AWS_ENDPOINT="https://s3.amazonaws.com"

# Storage Bucket Names
NEXT_PUBLIC_AVATARS_BUCKET_NAME="avatars"
NEXT_PUBLIC_LOGOS_BUCKET_NAME="logos"

# =============================================================================
# EMAIL / MAIL PROVIDER CONFIGURATION (Required for auth emails)
# =============================================================================
# Mail Provider: "plunk", "resend", "postmark", or "nodemailer"
MAIL_PROVIDER="plunk"

# Plunk Configuration (if using Plunk)
PLUNK_API_KEY="your-plunk-api-key"

# Resend Configuration (if using Resend)
# RESEND_API_KEY="your-resend-api-key"

# Postmark Configuration (if using Postmark)
# POSTMARK_SERVER_TOKEN="your-postmark-token"

# Nodemailer Configuration (if using custom SMTP)
# MAIL_HOST="smtp.gmail.com"
# MAIL_PORT="587"
# MAIL_USER="your-email@gmail.com"
# MAIL_PASS="your-app-password"

# =============================================================================
# PAYMENT PROVIDER CONFIGURATION (Required for billing)
# =============================================================================
# Payment Provider: "stripe", "lemonsqueezy", "creem", or "polar"
PAYMENT_PROVIDER="stripe"

# Stripe Configuration (if using Stripe)
STRIPE_SECRET_KEY="sk_test_xxx"
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="pk_test_xxx"
STRIPE_WEBHOOK_SECRET="whsec_xxx"

# Stripe Product/Price IDs
NEXT_PUBLIC_PRICE_ID_PRO_MONTHLY="price_xxx"
NEXT_PUBLIC_PRICE_ID_PRO_YEARLY="price_xxx"
NEXT_PUBLIC_PRICE_ID_LIFETIME="price_xxx"

# LemonSqueezy Configuration (if using LemonSqueezy)
# LEMONSQUEEZY_API_KEY="your-lemonsqueezy-api-key"
# LEMONSQUEEZY_STORE_ID="your-store-id"
# LEMONSQUEEZY_WEBHOOK_SECRET="your-webhook-secret"

# =============================================================================
# AUTHENTICATION - SOCIAL PROVIDERS (Optional)
# =============================================================================
# Google OAuth
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# GitHub OAuth
GITHUB_CLIENT_ID="your-github-client-id"
GITHUB_CLIENT_SECRET="your-github-client-secret"

# =============================================================================
# AI CONFIGURATION (Optional - for AI features)
# =============================================================================
# OpenAI API Key (for AI chat features)
# OPENAI_API_KEY="sk-xxx"

# Anthropic API Key (alternative to OpenAI)
# ANTHROPIC_API_KEY="sk-ant-xxx"

# =============================================================================
# ANALYTICS CONFIGURATION (Optional)
# =============================================================================
# Analytics Provider: "google", "plausible", "posthog", "mixpanel", etc.
# NEXT_PUBLIC_ANALYTICS_PROVIDER="google"

# Google Analytics
# NEXT_PUBLIC_GA_MEASUREMENT_ID="G-XXXXXXXXXX"

# Plausible Analytics
# NEXT_PUBLIC_PLAUSIBLE_DOMAIN="yourdomain.com"

# PostHog Analytics
# NEXT_PUBLIC_POSTHOG_KEY="phc_xxx"
# NEXT_PUBLIC_POSTHOG_HOST="https://app.posthog.com"

# Mixpanel Analytics
# NEXT_PUBLIC_MIXPANEL_TOKEN="your-mixpanel-token"

# =============================================================================
# LOGGING & MONITORING (Optional)
# =============================================================================
# Log Level: "debug", "info", "warn", "error"
LOG_LEVEL="info"

# Sentry Configuration (for error tracking)
# NEXT_PUBLIC_SENTRY_DSN="https://xxx@xxx.ingest.sentry.io/xxx"
# SENTRY_AUTH_TOKEN="your-sentry-auth-token"

# =============================================================================
# RATE LIMITING & SECURITY (Optional)
# =============================================================================
# Rate limiting configuration
# RATE_LIMIT_MAX="100"
# RATE_LIMIT_WINDOW="60000"

# =============================================================================
# DEVELOPMENT TOOLS (Optional)
# =============================================================================
# Skip email verification in development
# SKIP_EMAIL_VERIFICATION="true"

# Enable debug mode
# DEBUG="true"

# =============================================================================
# PRODUCTION ENVIRONMENT VARIABLES (Add when deploying)
# =============================================================================
# NODE_ENV="production"
# VERCEL_URL (automatically set by Vercel)
